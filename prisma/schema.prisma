// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- MODELS ---

// Model for student data
model Student {
  id        String           @id @unique
  name      String
  faculty   String
  major     String?
  avatarUrl String
  gpax      Float
  studyYear Int
  transcript TranscriptItem[]
}

// Model for staff data
model Staff {
  id        String  @id @unique
  name      String
  role      String
  avatarUrl String
  email     String? @unique
}

// Model for privilege data
model Privilege {
  id          Int    @id @default(autoincrement())
  title       String
  type        String
  description String
  reward      String
  criteria    Json // Using JSON type to store the criteria object
}

// Model for student's transcript items
model TranscriptItem {
  id        Int     @id @default(autoincrement())
  courseId  String
  grade     String

  // Relation to Student
  studentId String
  student   Student @relation(fields: [studentId], references: [id])

  @@unique([studentId, courseId])
}

